<script>
  docsearch({
    // Your apiKey and indexName will be given to you once
    // we create your config
    apiKey: '<%= SEARCH_CONFIG[:api_key] %>',
    indexName: '<%= SEARCH_CONFIG[:index_name] %>',
    <% if SEARCH_CONFIG[:app_id] != '' %>
      appId: '<%= SEARCH_CONFIG[:app_id] %>',
    <% end %>
    algoliaOptions: {
        hitsPerPage: 30
